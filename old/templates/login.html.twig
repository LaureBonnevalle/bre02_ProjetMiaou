{% extends "layout.html.twig" %}

{% block description %}
    {{ parent() }}
{% endblock %}
{% block title %} 
|Connexion
{% endblock %}
{% block body %}
    <body>
    <div class="rect">
{% block header %}
    {{ parent() }}
{% endblock %}


{% block error %}
    {{ parent() }}
{% endblock %} 
    
{% block content %}
    <main id="login">
    <section class ="login-content">
        <h2>Se connecter au site Miaou</h2>
        <article id="login-form" class="form">
        <h3>Pour vous connectez:</br> authentifiez-vous</h3>
            <form action="index.php?route=check-login" method="POST">
             <div class='container-login'>
                
                        <legend>Pour vous connectez:authentifiez-vous</legend>
                
                        <label  for         = "email">Email :</label>
                        <input  type        = "email"
                                id          = "email"
                                name        = "email"
                                aria-label  = "Email field"
                                value       = "lbonneva@hotmail.com">
                                <div class="error-message" id="error-email"></div>
                
                               
                        <label for = "password">Mot de passe :</label>
                        <div class="password-container">
                        <input  type       = "password"
                                class      = "password"
                                id         = "password"
                                name       = "password"
                                aria-label = "Password field"
                                value      = "MiaouMiaou1@">
                        <div class="error-message" id="error-old_password"></div>
                        <span class="eyes">
                            <i class="fas fa-eye-slash eyesImag"></i>
                        </span> 
                        </div>
                
                <div class="error-message" id="error-password"></div>

                        <input  type    = "hidden"
                                        name    = "csrf_token"
                                        id      = "csrf_token"
                                        value   = "{{ token }}">
                                        <div class="error-message" id="error-token"></div>
                        <div class="error-message" id="error-token"></div>
                
                <input type="submit" name="soumettre" value="Se connecter">
            </div>
            </form>
        </article>
        </section>
    </main>
{% endblock %}

{% block footer %}
    {% include "subpages/_footer.html.twig" %}
{% endblock %}


{% endblock %}
   
{% block java %}
    {% if scripts is defined %}
        {% for script in scripts %}
            <script src="{{ script }}"></script>
        {% endfor %}
    {% endif %}
{% endblock %}

    
  
   
